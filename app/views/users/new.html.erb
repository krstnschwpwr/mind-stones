<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form form-group">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 cntr">
      <div class="row">
        <h1>Sign Up</h1>
        <%= form_for(:user, :url => signup_path) do |f| %>
            <%= f.label :username %> <%= f.text_field :username, class: 'form-control' %>
            <%= f.label :password %><%= f.password_field :password, class: 'form-control' %></p>
            <%= f.label :password_confirmation%></br> <%= f.password_field :password_confirmation, class: 'form-control' %> </p>
            <%= f.submit :Signup, class: "btn btn-primary" %>
        <% end %>
        <% if @user.errors.any? %>
            <ul class="Signup_Errors">
              <% for message_error in @user.errors.full_messages %>
                  <li>* <%= message_error %></li>
              <% end %>
            </ul>
        <% end %>
      </div>



    </div>
    <div class="col-md-4"></div></div></div>


