<h3>Creating New Task Here</h3>

<%= form_for :task do |f| %>
  <p>
    <%= f.label :Task %><br>
    <%= f.text_field :title %>
    <%= Time.now.strftime("%m/%d/%Y") %>
  </p>
  <div style="overflow:hidden;">
    <div class="form-group">
        <div class="row">
            <div class="col-md-8">
                <div id="datetimepicker12"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker12').datetimepicker({
                inline: true,
                sideBySide: true
            });
        });
    </script>
</div>
  <p>
    <%= f.label :Duration %><br>
    <%= f.text_field :in %>
  </p>
  <p>
    <%= f.label :Date %><br>
    <%= date_field(:task, :created) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
